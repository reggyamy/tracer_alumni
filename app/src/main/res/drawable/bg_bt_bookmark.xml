<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_blue"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_bookmark_filled" android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp"/>
        </layer-list>

    </item>
    <item
        android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_blue"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_bookmark_unfilled" android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp"/>
        </layer-list>

    </item>
</selector>